#!/usr/bin/env php
<?php

use Castor\Console\ApplicationFactory;

if (file_exists($file = __DIR__ . '/../vendor/autoload.php')) {
    require $file;
} elseif ($file = __DIR__ . '/../../../../vendor/autoload.php') {
    require $file;
} else {
    throw new \RuntimeException('Unable to load autoloader.');
}

ApplicationFactory::run();
